{% extends 'base.html.twig' %}

{% block title %}All programs{% endblock %}

{% block body %}
    <h1 class="text-center ">Toutes les séries de la table program : </h1>
    <div class="d-flex flex-column align-items-center">
    {% for program in programs %}
        <div class="container mx-4 my-4 bg-light rounded">
            <h2>{{ loop.index }} / {{ program.title }} - Catégorie : {{ program.category.name }}</h2>
            <p>{{ program.summary }}</p>
            <a href="{{ path("program_show", { slug: program.slug }) }}">Voir la fiche</a>
        </div>
    {% else %}
        Aucune série trouvée.
    {% endfor %}
    <a href="{{ path('program_new') }}" class="btn-lg bg-secondary my-5 text-center">Ajouter une série</a>
    </div>
    <a href="{{ path('app_index') }}" class="btn-lg bg-secondary text-center">Retour à l'accueil</a>
{% endblock %}