<form method="post" action="{{ path('comment_delete', { program: program.id , season: season.id, episode: episode.id, comment: comment.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce commentaire ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ comment.id) }}">
    <button class="btn bg-secondary mt-0 mx-3 mb-3">Supprimer</button>
</form>