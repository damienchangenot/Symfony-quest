{% block header %}
<nav class="navbar navbar-expand-lg navbar-light bg-secondary">
    <a class="navbar-brand" href="{{ path('app_index') }}">
        <img src="{{ asset('build/wild.png') }}" width="50" height="50" alt="">
        Wild Series
    </a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse d-flex justify-content-between" id="navbarNavAltMarkup">
        <div class="navbar-nav">
            <a class="nav-item nav-link active" href="{{ path('program_index') }}">{{ 'program'|trans}}<span class="sr-only">(current)</span></a>
            <a class="nav-item nav-link active" href="{{ path('category_index') }}">{{ 'categories'|trans}}<span class="sr-only">(current)</span></a>
            <a class="nav-item nav-link active" href="{{ path('actors_index') }}">{{ 'actors'|trans}}<span class="sr-only">(current)</span></a>
            <div class="dropdown show">
                <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    {{ 'categories'|trans}}
                </a>
                <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                    {{ render(controller('App\\Controller\\DefaultController::navbarTop')) }}
                </div>
            </div>
        </div>
        <div>
            <div class="dropdown">
                <button class="btn btn-sm btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    {{ 'language'|trans }}
                </button>
                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                    <a class="dropdown-item" href="{{ path('app_index', {'_locale':'fr'})}}">Fr</a>
                    <a class="dropdown-item" href="{{ path('app_index', {'_locale':'en'})}}">En</a>

                </div>
            </div>
            <ul>

            </ul>
            {% if app.user %}
                {{ app.user.email }}
                <a href="{{ path('profil_index') }}" class="btn bg-primary text-white ml-2 ">{{ 'profil'|trans }}</a>
                <a class="btn bg-primary text-white ml-2" href="{{ path('app_logout') }}">{{ 'account.logout'|trans }}</a>
            {% else %}
                <a class="btn ml-2" href="{{ path('app_login') }}">{{ 'account.login'|trans }}</a>
                <a class="btn ml-2" href="{{ path('app_register') }}">{{ 'account.register'|trans }}</a>
            {% endif %}
        </div>
    </div>
</nav>
{% endblock %}
